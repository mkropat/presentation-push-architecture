ul
  max-width 80%

bgcolor = #FFD462

.bespoke-slide
  background-color bgcolor
  color #3F0B1B

.quick-slide
  transition none

.box
  background-color bgcolor
  color #3F0B1B
  padding 0 30px 5px 25px
  display flex
  flex-direction column
  align-items center
  justify-content center

.caption
  background-color bgcolor
  padding 5px 10px
  position absolute
  top 20px

a:link, a:visited, a:hover, a:active
	color rgb(0, 0, 238)
